class StudentManager:
    def __init__(self, platform_name):
        self.platform_name = platform_name
        self.students = []
    
    def add_student(self, name, email, course):
        student = {
            "name": name,
            "email": email,
            "course": course,
            "progress": 0,
            "created_at": datetime.now()
        }
        self.students.append(student)
        return student
    
    def calculate_engagement(self, student_id):
        """Calcula taxa de engajamento do estudante"""
        total_hours = sum([activity['duration'] for activity in student['activities']])
        return (total_hours / expected_hours) * 100

# Uso
manager = StudentManager("Ponto.School")
